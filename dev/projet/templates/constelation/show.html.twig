{% extends 'base.html.twig' %}

{% block title %}Constelation{% endblock %}

{% block body %}
    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
    {% if is_granted('ROLE_ADMIN') %}
    <h1>Constelation</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ constelation.id }}</td>
            </tr>
            <tr>
                <th>CodeConstelation</th>
                <td>{{ constelation.codeConstelation }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ constelation.nom }}</td>
            </tr>
            <tr>
                <th>Saison</th>
                <td>{{ constelation.saison }}</td>
            </tr>
            <tr>
                <th>EtoilePrincipale</th>
                <td>{{ constelation.etoilePrincipale }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ constelation.image }}</td>
            </tr>
            <tr>
                <th>DateDebut</th>
                <td>{{ constelation.dateDebut ? constelation.dateDebut|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>DateFin</th>
                <td>{{ constelation.dateFin ? constelation.dateFin|date('Y-m-d') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_constelation_index') }}">back to list</a>

    <a href="{{ path('app_constelation_edit', {'id': constelation.id}) }}">edit</a>

    {{ include('constelation/_delete_form.html.twig') }}
    {% else %}
        <h1>Vous n'etes pas un administrateur</h1>
        <button style=" margin-bottom: 6px;"  type="button" class="btn btn-secondary">
            <a style="color:#f8f5f5;text-align: center"  href="{{ path('app_pages') }}">Accueil</a></button>

    {% endif %}
    {% else %}
        <h1>Vous n'etes pas connecte</h1>
        <button style=" margin-bottom: 6px;"  type="button" class="btn btn-secondary">
            <a style="color:#f8f5f5;text-align: center"  href="{{ path('app_pages') }}">Accueil</a></button>
    {% endif %}
{% endblock %}
